<div class="container genticket">
  <h1>New Ticket</h1>


<%= form_for(@ticket,:url =>  {controller:"tickets", action:"create", events_id: @event.id}) do |f| %>

  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h3>Number Of Tickets</h3>
    <%= f.text_field :number_of_tickets , :autocomplete => :off %>
  </div>
  <div class="field">
     <h3>Ticket Printed Price</h3>
    <%= f.text_area :ticket_printed_price, :autocomplete => :off %>
  </div>

  <div class="field">
   <h3>Ticket Selling Price</h3>
    <%= f.text_area :ticket_selling_price, :autocomplete => :off %>
  </div>
  
  <div class="field">
    <h3>Ticket Number</h3>
    <%= f.text_field :ticket_number, :autocomplete => :off %>
  </div>
 
  <div class="field">
 <h3>Ticket Type</h3>
    <%= f.select :ticket_type, ['paper', 'electronic'], :autocomplete => :off %>
  </div>

    <div class="field">
     <h3>Comments</h3>
    <%= f.text_area :comments, :autocomplete => :off %>
  </div>

  <div class="actions">
    <%= f.submit "Create Ticket", :class=>"submit_btn btn btn-mod btn-medium btn-round"  %>
  </div>
<% end %>



</div>