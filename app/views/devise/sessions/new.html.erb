<h1 style="text-align:center">Login</h1>
<div class="tab-content tpl-minimal-tabs-cont section-text">
    
    <div class="tab-pane fade in active" id="mini-one">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <!-- Login Form -->                            
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                
                <form class="form contact-form" id="contact_form">
                    <div class="clearfix">
                        
                        <!-- Username -->
                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true, :class => "input-md round form-control" , :placeholder=>"Login Email" %>
                        </div>
                        
                        <!-- Password -->
                        <div class="form-group">
                            <%= f.password_field :password, autocomplete: "off",:class => "input-md round form-control", :placeholder=>"Password" %>
                        </div>
                            
                    </div>
                    
                    <div class="clearfix">
                        
                        <div class="cf-left-col">
                            
                            <!-- Inform Tip -->                                        
                            <div class="form-tip pt-20">
                                <a href="">Forgot Password?</a>
                            </div>
                            <% if devise_mapping.rememberable? -%>
                              <div class="field">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                              </div>
                            <% end -%>

                            
                        </div>
                        
                        <div class="cf-right-col">
                            
                            <!-- Send Button -->
                            <div class="align-right pt-10">
                                
                                <%= f.submit "Log in",:class=>"submit_btn btn btn-mod btn-medium btn-round" %>
                            </div>
                            
                        </div>
                        
                    </div>
                    
                </form>
                
            </div>
        </div>
        <!-- End Login Form -->
        <%end%>
    </div>
    
    
    
</div>


